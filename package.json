{
  "name": "serverless-boilerplate",
  "version": "0.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:beingmohit/serverless-boilerplate.git"
  },
  "scripts": {
    "start": "npm run generate:config:local && MOCKED_DATABASE=true env-cmd .env.local nodemon ./scripts/devServer.js --ignore app --exec babel-node",
    "deploy": "npm run deploy:api && npm run describe && npm run deploy:frontend",
    "deploy:frontend": "npm run build:frontend && env-cmd .env.prod node scripts/s3Sync.js",
    "deploy:api": "npm run build:api && npm run build:api:node_modules && cd build/api && env-cmd ../../.env.prod serverless --stage=production deploy",
    "generate:config": "node scripts/generateConfig.js",
    "generate:config:local": "env-cmd .env.local npm run generate:config",
    "generate:config:prod": "env-cmd .env.prod npm run generate:config",
    "build:frontend": "NODE_ENV=production env-cmd .env.prod webpack --progress --config scripts/webpack/webpack.prod.js -p && cp ./app/favicon.ico ./build/frontend/favicon.ico",
    "build:api": "npm run generate:config:prod && mkdir -p build && cp -rf api build/ && NODE_ENV=production babel --out-dir='build/api' --ignore='__tests__/*,node_modules/*' build/api",
    "build:api:node_modules": "cd build/api && yarn && cd ..",
    "lint": "npm run generate:config:local && npm run lint:eslint && npm run lint:css",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:css": "stylelint ./app/**/*.css",
    "lint:staged": "lint-staged",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "npm test -- --coverage --collectCoverageFrom 'app/**/*.js'",
    "start:remote": "npm run generate:config:local && MOCKED_DATABASE=false env-cmd .env.local nodemon ./scripts/devServer.js --ignore app --exec babel-node",
    "remove": "env-cmd .env.prod serverless remove",
    "describe": "env-cmd .env.prod node scripts/getStackDescription.js"
  },
  "lint-staged": {
    "lint:eslint": "*.js",
    "stylelint": "*.css"
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "apollo-client": "^1.0.0-rc.2",
    "babel-polyfill": "^6.16.0",
    "bluebird": "^3.5.0",
    "classnames": "2.2.5",
    "graphql-tag": "^1.2.3",
    "jwt-decode": "^2.1.0",
    "lodash": "^4.13.1",
    "react": "^15.3.1",
    "react-apollo": "^1.0.0-rc.2",
    "react-dom": "^15.3.1",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "recompose": "^0.22.0",
    "redux": "^3.6.0",
    "sanitize.css": "^5.0.0",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "aws-sdk": "^2.4.8",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "body-parser": "^1.15.2",
    "css-loader": "^0.27.2",
    "env-cmd": "^5.0.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-flowtype": "^2.11.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.2.0",
    "exports-loader": "^0.6.3",
    "express": "^4.15.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "file-loader": "^0.10.0",
    "flow-bin": "^0.42.0",
    "graphql": "^0.9.1",
    "html-webpack-plugin": "^2.21.0",
    "identity-obj-proxy": "^3.0.0",
    "iflow-lodash": "^1.1.24",
    "jest-cli": "^19.0.0",
    "jsonwebtoken": "^7.1.9",
    "lint-staged": "^3.0.3",
    "nodemon": "^1.10.0",
    "postcss-cssnext": "^2.6.0",
    "postcss-loader": "^1.2.2",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^3.0.0",
    "pre-commit": "^1.1.3",
    "react-test-renderer": "^15.3.1",
    "require-clean": "0.1.3",
    "s3": "^4.4.0",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.14.1",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^16.0.0",
    "url-loader": "^0.5.7",
    "uuid-js": "^0.7.5",
    "webpack": "^2.2.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.11.0",
    "webpack-md5-hash": "0.0.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|png|gif|eot|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/scripts/jest/fileMock.js",
      "^.+\\.css$": "<rootDir>/scripts/jest/cssMock.js"
    }
  }
}
